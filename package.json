{
  "name": "hoppel",
  "version": "0.3.1",
  "description": "Simulate CouchDB MR",
  "main": "dist/hoppel.js",
  "jsnext:main": "lib/execute.js",
  "scripts": {
    "pretest": "eslint lib test",
    "test": "mocha --compilers ls:LiveScript,js:babel/register test/unit test/integration -R progress",
    "watch-test": "mocha --compilers ls:LiveScript,js:babel/register test/unit test/integration -R nyan --watch",
    "build": "mkdir -p dist && rollup lib/execute.js | babel -m common -o dist/hoppel.js",
    "prepublish": "npm run build && npm test"
  },
  "keywords": [
    "mapreduce"
  ],
  "author": "Jonas Weber <mail@jonasw.de> (http://jonasw.de/)",
  "license": "ISC",
  "devDependencies": {
    "LiveScript": "1.3.1",
    "babel": "5.8.23",
    "chai": "3.3.0",
    "eslint": "1.6.0",
    "memdown": "1.1.0",
    "mocha": "2.3.3",
    "pouchdb": "5.0.0",
    "rollup": "0.19.1",
    "uglifyjs": "2.4.10"
  },
  "dependencies": {
    "pouchdb-collate": "1.2.0"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
      "es6": true
    }
  },
  "repository": "thriqon/hoppel"
}
